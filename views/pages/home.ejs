<h1>This is Zendesk Ticket Viewer</h1>

<ul>
    <% for (i=0; i < tickets.length; i++) { %>

        <li class="ticketId">
            <b>Ticket ID:</b>
            <%= tickets[i].id %>
                <b>Ticket status:</b>
                <%= tickets[i].status %>
                    <div class="ticket-card">
                        <b> Ticket created at: </b>
                        <%= tickets[i].created_at %>

                            <b> Ticket updated at: </b>
                            <%= tickets[i].updated_at %>

                                <b> Ticket subject: </b>
                                <%= tickets[i].subject %>


                                    <b> Ticket description: </b>
                                    <%= tickets[i].description %>
                    </div>
        </li>
        <% } %>
</ul>
<div class="cursor">
    <form method="get" action="/">
        <input type="hidden" name="beforecursor" value="<%= meta.before_cursor %>" />
        <button class="prev">PREVIOUS PAGE</button>
    </form>

    <form method="get" action="/">
        <input type="hidden" name="aftercursor" value="<%= meta.after_cursor %>" />
        <button class="next">NEXT PAGE</button>
    </form>

</div>
<script type="text/javascript" src="/static/home.js"></script>